@using webFinalProje.Models.siniflar
@model List<Faturalar>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Fatura Sayfası</h2>
<table class="table table-bordered" style="margin-top:20px;">
	<tr>
		<th>ID</th>
		<th>Seri No</th>
		<th>Sıra No</th>
		<th>Vergi Dairesi</th>
		<th>Tarih</th>
		<th>Saat Adı</th>
		<th>Toplam Tutar</th>
		<th>Teslim Eden</th>
		<th>Teslim Alan</th>
		<th>Detaylar</th>
		<th>Güncelle</th>
	</tr>
	@foreach (var k in Model)
	{
		<tr>
			<td>@k.Faturaid</td>
			<td>@k.FaturaSeriNo</td>
			<td>@k.FaturaSiraNo</td>
			<td>@k.VergiDairesi</td>
			<td>@k.Tarih</td>
			<td>@k.Saat</td>
			<td>@k.Toplam</td>
			<td>@k.TeslimEden</td>
			<td>@k.TeslimAlan</td>
			<td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-success" style="background-color:coral">Detay</a></td>
			<td><a href="/Fatura/FaturaGetir/@k.Faturaid" class="btn btn-success">Güncelle</a></td>
		</tr>
	}
</table>
<a href="/Fatura/FaturaEkle" class="btn btn-info">Fatura Ekle</a>

