@using webFinalProje.Models.siniflar
@model List<SatisHareket>
@{
	ViewBag.Title = "DepartmanPersonelSatıs";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Departman Personel Satıs</h2>

<ol class="breadcrumb mb-4">
	<li class="breadcrumb-item active">Personel Adı: @ViewBag.dpers</li>
</ol>
<br />
<table class="table table-condensed">
	<tr>
		<th>Satis Id</th>
		<th>Ürün</th>
		<th>Cari</th>
		<th>Fiyat</th>
		<th>Adet</th>
		<th>Toplam</th>
		<th>Tarih</th>
		<th>Yazdır</th>
	</tr>
	@foreach (var x in Model)
	{
		<tr>
			<td>@x.Satisid</td>
			<td>@x.Urun.UrunAd</td>
			<td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
			<td>@x.Fiyat</td>
			<td>@x.Adet</td>
			<td>@x.ToplamTutar</td>
			<td>@x.Tarih</td>
			<td><a href="#" class="btn btn-warning">Yazdır</a></td>
		</tr>
	}
</table>
