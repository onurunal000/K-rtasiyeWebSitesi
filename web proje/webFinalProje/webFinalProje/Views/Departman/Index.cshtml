@using webFinalProje.Models.siniflar
@model List<Departman>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Departman Listesi</h2>

<table class="table table-bordered" style="margin-top:20px;">
	<tr>
		<th>ID</th>
		<th>Departman Adı</th>
		<th>Sil</th>
		<th>Güncelle</th>
		<th>Detaylar</th>
	</tr>
	@foreach (var k in Model)
	{
		<tr>
			<td>@k.Departmanid</td>
			<td>@k.DepartmanAdi</td>
			<td><a href="/Departman/DepartmanSil/@k.Departmanid" class="btn btn-danger">Sil</a></td>
			<td><a href="/Departman/DepartmanGetir/@k.Departmanid" class="btn btn-success">Güncelle</a></td>
			<td><a href="/Departman/DepartmanDetay/@k.Departmanid" class="btn btn-success" style="background-color:coral">Detay</a></td>
		</tr>
	}
</table>
<a href="/Departman/DepartmanEkle" class="btn btn-info">Departman Ekle</a>