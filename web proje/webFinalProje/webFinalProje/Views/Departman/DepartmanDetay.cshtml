@using webFinalProje.Models.siniflar
@model List<Personel>
@{
	ViewBag.Title = "DepartmanDetay";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Departman Detay Sayfasi</h2>

<ol class="breadcrumb mb-4">
	<li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol><br />
<table class="table table-hover">
	<tr>
		<th>Personel ID</th>
		<th>Ad</th>
		<th>Soyad</th>
		<th>Gorsel</th>
		<th>Satışlar</th>
	</tr>
	@foreach (var x in Model)
	{
		<tr>
			<td>@x.Personelid</td>
			<td>@x.PersonelAd</td>
			<td>@x.PersonelSoyad</td>
			<td>@x.PersonelGorsel</td>
			<td><a href="/Departman/DepartmanPersonelSatıs/@x.Personelid" class="btn btn-default" style="background-color:orangered">Satışlar</a> </td>
		</tr>
	}
</table>