@using webFinalProje.Models.siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Cari Listesi</h2>

<table class="table table-striped">
    <tr>
        <th>Cari ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Sehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Guncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Cariid</td>
            <td>@x.CariAd</td>
            <td>@x.CariSoyad</td>
            <td>@x.CariSehir</td>
            <td>@x.CariMail</td>
            <td><a href="/Cari/CariSil/@x.Cariid" class=" btn btn-danger">Sil</a></td>
            <td><a href="/Cari/CariGetir/@x.Cariid" class=" btn btn-warning">Güncelle</a></td>
            <td><a href="/Cari/MusteriSatis/@x.Cariid" class=" btn btn-default" style="background-color:lightcoral">Satış Geçmişi</a></td>
        </tr>
    }
</table>
<a href="/Cari/YeniCari" class="btn btn-primary">Cari Ekle</a>